root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{json,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

[*.ipynb]
indent_size = 1
insert_final_newline = false

[canonical_schemas/*.txt]
indent_size = 1
